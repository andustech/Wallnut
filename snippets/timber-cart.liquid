{% assign cart_count = cart.item_count | plus:0 %}

<div id="CartDrawer" class="drawer drawer--right border-0  px-0 text-center">
  <div class="drawer__header pl-6 pr-8 pt-6 pb-4 relative">
    <span class="uppercase">Your Cart</span>
    <div class="table-cell drawer__close js-drawer-close ml-auto" id="mini-cart-close">
      <img class="drawer__close js-drawer-close" src="https://cdn.shopify.com/s/files/1/0492/6321/4743/files/close_button.svg?v=1612551339" />
    </div>
  </div>
  <div id="react-empty-cart">
    <script type="application/json">
      {
        "cartChair": "{{ 'cart-chair.gif' | asset_url }}",
        "cartCount": {{ cart.item_count | json }}
      }
    </script>
  </div>
  <div id="CartContainer"></div>
</div>
