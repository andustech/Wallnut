
<div id="customer-wrapper" class="desktop-push-3 tablet-push-1 desktop-7 mt-20 reset-pwd tablet-4 mobile-3">

  <div id="template" class="container">
    <div class="template_header section_titile">
      <h3 class="font-bold text-black">Reset Account Password</h3>
      <p class="note mb-0">Enter a new password for {{ email }}</p>
    </div>

    {% form 'reset_customer_password', return_to: '/'  %}
    {{ form.errors | default_errors }}

    <div id="password" class="clearfix large_form">
      <label class="large" for="password">Password</label>
      <input type="password" value="" name="customer[password]" required id="customer_password" class="large password" size="16" />
    </div>
    <div id="password_confirm" class="clearfix large_form">
      <label class="large" for="password_confirmation">Password Confirmation</label>
      <input type="password" value="" name="customer[password_confirmation]" required id="customer_password_confirmation" class="large password" size="16" />
    </div>
    <div class="action_bottom">
      <input class="primary_btn" type="submit" value="Reset Password" />
    </div>
    {% endform %}
  </div>
</div>
