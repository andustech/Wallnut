<div class="section-padding">
  <div class="footer-section footer-template" data-section-id="{{ section.id }}" data-section-type="footer-section">
    <div class="clear"></div>
    <div class="fast_order_main_container top" style='background-color: #133744'>
      <div class="container">
        <!-- <div class="bg-white grid grid-center grid-cols-3 items-center"> -->
        <div class="fast_order_inner justify-between flex items-start" style='background: #F4F2EC;'>
          <h2 class="h3-attila-sans font-medium text-black">{{ section.settings.title }}</h2>
          <p class="news_para mb-0">{{ section.settings.subheading }}</p>
          <div class="newsletter">
            <div class="klaviyo-form-SxEnPF"></div>

            {% comment %} <form action=''>
              <input class='email_input' placeholder='Enter Email' type='emai'>
            </form> {% endcomment %}
            <p class="mt-4 mb-0">{{ section.settings.content }}</p>
          </div>
        </div>
      </div>
    </div>
      <div class='footer_bg'>
          <div class='container'>
            <div class='footer_logo'>
              <img src='{{ section.settings.logo_icon }}'>
              <p>{{ section.settings.logo_title }}</p>
            </div>
            <div class='footer_opt_container'>
              <div class='footer_left'>
              {% for block in section.blocks %}
                {% if forloop.index < 3 %}
                  {% assign menu_handle = block.settings.footer_nav %}
                  <div class='footer_opt'>
                    <p class='footer_title'>{{ block.settings.title }}</p>
                    <ul>
                      {% for link in linklists[menu_handle].links %}
                        <li><a href='{{ link.url }}' class='normal-case'>{{ link.title }}</a></li>
                      {% endfor %}
                    </ul>
                  </div>
                {% endif %}
              {% endfor %}
